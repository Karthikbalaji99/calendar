{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": "dist/public/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.ts" },
    { "src": "/(.*)", "dest": "api/index.ts" }
  ]
}
